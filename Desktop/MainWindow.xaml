<Window x:Class="Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Button Content="A" Grid.Column="0" Grid.Row="0" Click="AClicked"/>
        <Button Content="B" Grid.Column="4" Grid.Row="0" Click="BClicked"/>
        <Button Content="C" Grid.Column="0" Grid.Row="4" Click="CClicked"/>
        <Button Content="D" Grid.Column="4" Grid.Row="4" Click="DClicked"/>
        <Button Content="Reset" Grid.Column="2" Grid.Row="4" Click="Reset"/>
        <Label Content="{Binding Numbers[0]}" Grid.Column="1" Grid.Row="1" />
        <Label Content="{Binding Numbers[1]}" Grid.Column="2" Grid.Row="1" />
        <Label Content="{Binding Numbers[2]}" Grid.Column="3" Grid.Row="1" />
        <Label Content="{Binding Numbers[3]}" Grid.Column="1" Grid.Row="2" />
        <Label Content="{Binding Numbers[4]}" Grid.Column="2" Grid.Row="2" />
        <Label Content="{Binding Numbers[5]}" Grid.Column="3" Grid.Row="2" />
        <Label Content="{Binding Numbers[6]}" Grid.Column="1" Grid.Row="3" />
        <Label Content="{Binding Numbers[7]}" Grid.Column="2" Grid.Row="3" />
        <Label Content="{Binding Numbers[8]}" Grid.Column="3" Grid.Row="3" />
    </Grid>
</Window>
